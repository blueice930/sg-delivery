{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "airbnb-typescript"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": "./tsconfig.json",
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint",
        "typescript"
    ],
    "rules": {
        "react/jsx-filename-extension": [2, { "extensions": [".tsx", ".ts"] }],
        "react/jsx-props-no-spreading": [1],
        "@typescript-eslint/no-unused-vars": [1]
    }
}
